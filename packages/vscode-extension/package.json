{
  "name": "cartguard-vscode-extension",
  "displayName": "CartGuard",
  "publisher": "cartguard",
  "version": "0.1.3",
  "private": true,
  "description": "CartGuard VSCode extension for compliance rule demos and validation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitkojine/CartGuard.git",
    "directory": "packages/vscode-extension"
  },
  "files": [
    "dist/**",
    "media/**",
    "demo/**/*.json",
    "demo/DEMO_FILES.md",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "main": "./dist/src/extension.js",
  "engines": {
    "vscode": "^1.96.0"
  },
  "activationEvents": [],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cartguardSidebar",
          "title": "CartGuard",
          "icon": "media/cartguard.svg"
        }
      ]
    },
    "views": {
      "cartguardSidebar": [
        {
          "id": "cartguardActionsView",
          "name": "Demo Controls"
        }
      ]
    },
    "commands": [
      {
        "command": "cartguard.runDemo",
        "title": "CartGuard: Run Demo"
      },
      {
        "command": "cartguard.validateJsonFiles",
        "title": "CartGuard: Validate JSON Files"
      },
      {
        "command": "cartguard.openProcessView",
        "title": "CartGuard: Open Process View"
      },
      {
        "command": "cartguard.openDemoSlideshow",
        "title": "CartGuard: Open Slideshow Demo"
      },
      {
        "command": "cartguard.openExecDemoSlideshow",
        "title": "CartGuard: Open Exec Demo"
      },
      {
        "command": "cartguard.openChampionDemoSlideshow",
        "title": "CartGuard: Open Champion Demo"
      },
      {
        "command": "cartguard.demoNextStep",
        "title": "CartGuard: Demo Next Step"
      },
      {
        "command": "cartguard.reopenDemoSlideshow",
        "title": "CartGuard: Reopen Slideshow Demo"
      },
      {
        "command": "cartguard.reopenExecDemoSlideshow",
        "title": "CartGuard: Reopen Exec Demo"
      },
      {
        "command": "cartguard.reopenChampionDemoSlideshow",
        "title": "CartGuard: Reopen Champion Demo"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "release:local": "npm version patch --no-git-tag-version && pnpm run build && pnpm exec vsce package --no-dependencies -o cartguard.vsix && code --install-extension cartguard.vsix --force && code --list-extensions --show-versions | rg -i \"cartguard.cartguard-vscode-extension\"",
    "test": "pnpm run build",
    "test:e2e": "pnpm run build && node ./dist/test/runTest.js",
    "test:e2e:slow": "CARTGUARD_E2E_STEP_MS=2000 CARTGUARD_E2E_HOLD_OPEN_MS=0 CARTGUARD_E2E_MANUAL_CONTINUE=1 CARTGUARD_E2E_MANUAL_MAX_WAIT_MS=2147483647 CARTGUARD_E2E_CLOSE_ON_DONE=1 CARTGUARD_DEMO_WRITE_TO_DISK=1 CARTGUARD_DEMO_CLOSE_WINDOW=0 pnpm run test:e2e",
    "test:e2e:slow:auto": "CARTGUARD_E2E_STEP_MS=2000 CARTGUARD_E2E_HOLD_OPEN_MS=0 CARTGUARD_E2E_MANUAL_CONTINUE=1 CARTGUARD_E2E_MANUAL_MAX_WAIT_MS=2147483647 CARTGUARD_E2E_CLOSE_ON_DONE=1 CARTGUARD_DEMO_WRITE_TO_DISK=1 CARTGUARD_DEMO_CLOSE_WINDOW=0 CARTGUARD_DEMO_AUTOPLAY=1 CARTGUARD_DEMO_AUTOPLAY_STEP_MS=3000 pnpm run test:e2e",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cartguard/engine": "workspace:*",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.96.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "3.6.2",
    "mocha": "^11.7.2",
    "vscode": "^1.1.37"
  }
}